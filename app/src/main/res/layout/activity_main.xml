<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="139dp"
            android:layout_height="38dp"
            android:max="8"
            android:progress="4"
            android:id="@+id/SeekBar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="136dp" android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.428" app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.815"/>
    <TextView
            android:text="@string/Divisions"
            android:layout_height="21dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_width="58dp" tools:layout_editor_absoluteY="38dp"/>
    <TextView
            android:text="@string/Wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Vittorie" android:layout_marginEnd="145dp" app:layout_constraintEnd_toEndOf="parent"
            android:text="1"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintTop_toTopOf="@+id/textView2"/>
    <Button
            android:text="@string/Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Gioca"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp" tools:layout_editor_absoluteY="79dp"/>
    <view android:layout_width="0dp" android:layout_height="0dp"
          class="com.example.gioco.ScacchieraView"
          id="@+id/view2" app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="150dp" app:layout_constraintTop_toBottomOf="@+id/SeekBar"
          android:id="@+id/vScacchiera" app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>